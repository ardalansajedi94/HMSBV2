<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.hotelairport.androidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />
    <uses-permission android:name="android.permission.CAMERA" tools:node="remove" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ir.hotelairport.androidapp.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="f931f7ffac65dc835e309d766e4a9715"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="727f977f010d8fece84d8fd9e9a98254dd1c0be2"
            />
        <activity android:name="ir.hotelairport.androidapp.airportHotels.ComeFromWebActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://example.com" -->

                <data
                    android:host="app.hotelairport.androidapp"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="ir.hotelairport.androidapp.AuthActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name="ir.hotelairport.androidapp.airportHotels.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            >

        </activity>
        <activity
            android:name="ir.hotelairport.androidapp.airportHotels.SplashAct"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name="ir.hotelairport.androidapp.LoggedInActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize" >

        </activity>
        <activity android:name="ir.hotelairport.androidapp.SplashActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            >


        </activity>

        <activity android:name="ir.hotelairport.androidapp.airportHotels.AirportHotelAct"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">

        </activity>


        <receiver android:name="co.ronash.pushe.receiver.UpdateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data
                    android:path="iDid"
                    android:scheme="package" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="iDid" />
            </intent-filter>
        </receiver>

        <meta-data android:name="co.ronash.pushe.token" android:value="PUSHE_463639521265"/>
        <meta-data android:name="co.ronash.pushe.cr" android:value="Tm9uZQ=="/>

    </application>



    <uses-sdk
        tools:overrideLibrary="co.ronash.pushe" />
    <permission
        android:name="ir.hotelairport.androidapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission
        android:name="iDid.permission.C2D_MESSAGE" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Optional permissions -->
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>


</manifest>