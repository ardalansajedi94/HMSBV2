<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/outgoing_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/balloon_outgoing_normal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:padding="8dp">

            <TextView
                android:id="@+id/time_line_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="Rahul Agrawal is a good bsasdfasdfaaaaaafasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfaoy but he does not know what he wants." />

            <TextView
                android:id="@+id/time_line_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/colorPrimary"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"

                android:maxLines="1"
                android:text="2014/15/15 Wendday"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>